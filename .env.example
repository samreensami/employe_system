# Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# SECURITY: Never commit the actual .env file to version control!

# =============================================================================
# AI API Keys (Required for AI features)
# =============================================================================
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# Gmail Integration (OAuth2-based)
# =============================================================================
# Note: Gmail uses OAuth2 credentials stored in credentials/gmail_token.json
# Run 'python setup_gmail.py' to configure Gmail integration
GMAIL_API_KEY=your_gmail_api_key_here
GMAIL_CLIENT_ID=your_gmail_client_id_here
GMAIL_CLIENT_SECRET=your_gmail_client_secret_here

# =============================================================================
# WhatsApp Integration (Session-based)
# =============================================================================
# Note: WhatsApp uses browser session stored in credentials/whatsapp_session/
# Run 'python setup_whatsapp.py' to configure WhatsApp integration
WHATSAPP_TOKEN=your_whatsapp_token_here
WHATSAPP_BUSINESS_ID=your_whatsapp_business_id_here

# =============================================================================
# Social Media APIs
# =============================================================================
LINKEDIN_API_KEY=your_linkedin_api_key_here
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token_here

# =============================================================================
# Email SMTP Configuration
# =============================================================================
EMAIL_SMTP_PASSWORD=your_smtp_password_here

# Gmail Watcher Configuration
# Note: Gmail uses OAuth2, so credentials are stored in credentials/gmail_token.json
# Run 'python setup_gmail.py' to configure Gmail integration
GMAIL_CHECK_INTERVAL=120
GMAIL_MAX_RESULTS=10
GMAIL_ENABLED=true

# WhatsApp Watcher Configuration
# Note: WhatsApp uses browser session, stored in credentials/whatsapp_session/
# Run 'python setup_whatsapp.py' to configure WhatsApp integration
WHATSAPP_CHECK_INTERVAL=30
WHATSAPP_HEADLESS=true
WHATSAPP_MAX_MESSAGES_PER_CHAT=5
WHATSAPP_ENABLED=true

# =============================================================================
# Odoo ERP Integration (JSON-RPC)
# =============================================================================
# Run 'python setup_odoo.py' to configure Odoo integration
ODOO_URL=http://localhost:8069
ODOO_DB=odoo
ODOO_DATABASE=odoo
ODOO_USER=admin
ODOO_USERNAME=admin
ODOO_PASSWORD=your_odoo_password_here
ODOO_API_KEY=your_odoo_api_key_here
ODOO_TIMEOUT=30
ODOO_APPROVAL_THRESHOLD=100.0

# Application Settings
LOG_LEVEL=INFO
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=.txt,.md,.csv,.pdf
AUDIT_LOG_RETENTION_DAYS=90

# Security Settings
SECURITY_TOKEN_EXPIRY_HOURS=24
MAX_LOGIN_ATTEMPTS=3
LOCKOUT_DURATION_MINUTES=30

# Network Settings
REQUEST_TIMEOUT_SECONDS=30
MAX_RETRIES=3
BACKOFF_FACTOR=1.0
MAX_BACKOFF_SECONDS=60.0

# Database Settings (if applicable)
DATABASE_URL=
DB_USERNAME=
DB_PASSWORD=

# Email Settings
SMTP_SERVER=
SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_FROM_ADDRESS=

# External Service Endpoints
EXTERNAL_API_BASE_URL=

# =============================================================================
# Mock Mode Configuration (Hackathon/Demo)
# =============================================================================
# Set to 'true' to enable mock mode for demos without real API keys
# When enabled, API calls will print JSON payloads and log MOCK_SUCCESS
MOCK_MODE=false
MOCK_LOG_PAYLOADS=true